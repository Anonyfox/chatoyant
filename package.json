{
  "name": "chatoyant",
  "version": "0.2.0",
  "description": "Unified TypeScript SDK for LLM providers (OpenAI, Anthropic, xAI) with streaming, structured outputs, and zero dependencies.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./core": {
      "import": {
        "types": "./dist/core.d.ts",
        "default": "./dist/core.js"
      },
      "require": {
        "types": "./dist/core.d.cts",
        "default": "./dist/core.cjs"
      }
    },
    "./schema": {
      "import": {
        "types": "./dist/schema.d.ts",
        "default": "./dist/schema.js"
      },
      "require": {
        "types": "./dist/schema.d.cts",
        "default": "./dist/schema.cjs"
      }
    },
    "./tokens": {
      "import": {
        "types": "./dist/tokens.d.ts",
        "default": "./dist/tokens.js"
      },
      "require": {
        "types": "./dist/tokens.d.cts",
        "default": "./dist/tokens.cjs"
      }
    },
    "./providers/openai": {
      "import": {
        "types": "./dist/providers/openai.d.ts",
        "default": "./dist/providers/openai.js"
      },
      "require": {
        "types": "./dist/providers/openai.d.cts",
        "default": "./dist/providers/openai.cjs"
      }
    },
    "./providers/anthropic": {
      "import": {
        "types": "./dist/providers/anthropic.d.ts",
        "default": "./dist/providers/anthropic.js"
      },
      "require": {
        "types": "./dist/providers/anthropic.d.cts",
        "default": "./dist/providers/anthropic.cjs"
      }
    },
    "./providers/xai": {
      "import": {
        "types": "./dist/providers/xai.d.ts",
        "default": "./dist/providers/xai.js"
      },
      "require": {
        "types": "./dist/providers/xai.d.cts",
        "default": "./dist/providers/xai.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsx src/index.ts",
    "test": "node --import tsx --test --test-reporter=dot $(find src -name '*.test.ts' -type f)",
    "test:watch": "node --import tsx --test --test-reporter=dot --watch $(find src -name '*.test.ts' -type f)",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "check": "npm run typecheck && npm run lint",
    "prepublishOnly": "npm run check && npm run build",
    "typecheck": "tsc --noEmit",
    "docs": "typedoc",
    "docs:serve": "npx serve docs",
    "release:patch": "npm run check && npm version patch -m 'Release v%s' && git push && git push --tags",
    "release:minor": "npm run check && npm version minor -m 'Release v%s' && git push && git push --tags",
    "release:major": "npm run check && npm version major -m 'Release v%s' && git push && git push --tags"
  },
  "keywords": [
    "llm",
    "openai",
    "anthropic",
    "claude",
    "gpt",
    "chatgpt",
    "xai",
    "grok",
    "ai",
    "ai-sdk",
    "typescript",
    "typesafe",
    "streaming",
    "structured-output",
    "function-calling",
    "chat-completion",
    "text-generation",
    "ai-client",
    "llm-sdk",
    "zero-dependency"
  ],
  "author": {
    "name": "Anonyfox",
    "email": "max@anonyfox.com",
    "url": "https://anonyfox.com"
  },
  "license": "MIT",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/Anonyfox"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Anonyfox/chatoyant.git"
  },
  "bugs": {
    "url": "https://github.com/Anonyfox/chatoyant/issues"
  },
  "homepage": "https://anonyfox.github.io/chatoyant",
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/node": "^25.0.3",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typedoc": "^0.28.15",
    "typescript": "^5.9.3"
  }
}
